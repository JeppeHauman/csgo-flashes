<%- include('partials/header') -%>

<h1 class="title">All flashes</h1>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row gy-10">
      <% flashes.forEach(fl => { %>
          <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <a href="<%=fl.link%>">
                  <img class="card-img-top" src="/img/<%=fl.map%>.jpg" alt="map">
                </a>
                <div class="card-body">
                  <p class="card-text"><%= fl.desc %></p>
                </div>
              </div>
            </div>
      <% }) %>                     
    </div>
  </div>
</div>

<%- include('partials/footer') -%>